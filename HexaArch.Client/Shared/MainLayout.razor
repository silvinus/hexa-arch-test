@inherits LayoutComponentBase

<RadzenDialog />
<RadzenNotification/>
<RadzenContextMenu/>
<RadzenTooltip/>

<RadzenLayout class="rz-shadow-3">
    <RadzenHeader>
        <div class="d-flex align-items-center">
            <RadzenSidebarToggle Click="@(() => expand = !expand)" />
            <a href="https://docs.microsoft.com/aspnet/" target="_blank">About</a>
        </div>
    </RadzenHeader>
    <RadzenSidebar @bind-Expanded="@expand">
        <NavMenu />
    </RadzenSidebar>
    <RadzenBody>
        <main>
            <div class="content px-4">
                @Body
            </div>
        </main>
    </RadzenBody>
    <RadzenFooter>
        Footer
    </RadzenFooter>
</RadzenLayout>
@code {
    bool expand = true;
}
